<ul class="form-list">
<li class="form-item">
  <label for="mame" class="form-mame">Ім'я</label>
  <svg class="form-icon-name" width="18" height="18">
    <use href="./images/icons.svg#icon-person-black-18dp-1"></use>
  </svg>
  <input
    type="text"
    class="form-input"
    name="user-name"
    id="mame"
  />
</li>
<li class="form-item">
  <label for="tel" class="form-mame">Телефон</label>
  <input type="tel" class="form-input" name="user-tel" id="tel" />
  
</li>
<li class="form-item">
<label for="email" class="form-mame">Пошта</label>
  <input
    type="email"
    class="form-input"
    name="user-email"
    id="email"
  />
  
</li>
<li class="form-item">
  <label for="comment" class="form-mame">Коментар</label>
  <textarea name="comment" id="" cols="30" rows="10"></textarea>
</li>
</ul>
<button type="submit">Відправити</button>